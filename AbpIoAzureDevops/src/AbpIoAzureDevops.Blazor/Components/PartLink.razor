@inject NavigationManager NavigationManager

<div class="alert alert-secondary mt-4" role="alert" @onclick="NavigateTo">
    <span class="oi oi-paperclip mr-2" aria-hidden="true"></span>
    <span class="bloglink">@Title</span>
 </div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Href { get; set; }
    [Parameter] public string PrevHref { get; set; }
    [Parameter] public string NextHref { get; set; }

    private void NavigateTo()
    {
      NavigationManager.NavigateTo(Href);
    }

}
